<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite85Percent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite60Percent</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite60Percent</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.NoBackground.TranslucentStatusBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextStyleWhite" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>
